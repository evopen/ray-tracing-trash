{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run debug",
			"env": {
				"RUST_LOG": "ray_tracing,error",
				"RUST_BACKTRACE": "1",
			},
			"presentation": {
				"clear": true
			},
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run release",
			"env": {
				"RUST_LOG": "ray_tracing,error"
			},
			"presentation": {
				"clear": true
			}
		}
	]
}
